<div class="row">

{{#each jobs}}
<div class="col-md-10 p-4">

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Category</th>
      <th scope="col">Company</th>
      <th scope="col">Position</th>
      <th scope="col">Location</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td> <a href="">Category</a></td>
      <td><p>{{company}}</p></td>
      <td><p>{{position}}</p></td>
      <td><p>{{location}}</p></td>
    </tr>
    <tr>
      <td colspan="4"> <a href="/post/{{_id}}">Ver Mas info</a></td>
    </tr>
    <tr>
      <td colspan="4"><a href="/jobs/edit/{{_id}}"><button class="btn btn-dark btn-block">Editar</button></a></td>
    </tr>
    <tr>
      <td colspan="4"><form action="/jobs/delete/{{_id}}?_method=DELETE" method="POST">
<input type="hidden" name="_method" value="DELETE">
 <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
 </form> </td>
    </tr>
    
  </tbody>
</table>

</div>

{{else}}

<div class="card mx-auto">
    <div class="card-body">
        <h1>Bienvenido, {{ user.name }}</h1>
        <p class="lead">Todavia no tienes publicaciones</p>
        <a href="/jobs/add">Crea Una</a>
    </div>
</div>



{{/each}}

</div>